<div class="container mt-3">
  <div class="row">
      <div class="col-md-6 col-xs-12 col-md-offset-3">
        <div class="panel">
          <div class="panel-heading">
            <h3 class="panel-title">Sportify Feed</h3>
          </div>
          <%# Tes sports favoris: <%=  %>

          <div class="panel-body">
            <hr class="margin-bottom-10">
            <%= turbo_stream_from "publications" %>
            <ul id="publications" class="list-group list-group-dividered list-group-full">
              <% @publications.order(created_at: :desc).each do |publication| %>
                <div data-controller="display-comments like-button"%>
                  <%# <%= render `#{publication.kind_of}_card` %>
                  <%= render "player_creation_card", publication: publication %>
                  <%= render "event_creation_card", publication: publication %>

                  <%# <%= render "publication", publication: publication%>
                  <div class="d-none" data-display-comments-target="comment" data-button-like-target="like">
                    <%= render "comments", publication: publication %>
                    <%# <%= render "form_comment", comment: @comment %>
                  </div>
                </div>
              <% end %>
            <%= render "form", publication: @publication %>
            </ul>
            <span class="text-info">1 sportif connect√©</span>
          </div>
        </div>
      </div>
  </div>
</div>
