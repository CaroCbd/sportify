<li class="list-group-item w-95 my-2">
  <div class="d-flex flex-column">
    <div class="d-flex flex-row align-items-center mx-1">

      <%= cl_image_tag publication.user.photo.key, class:"avatar m-2" %>

        <div class="d-flex gap-5">
          <div>
            @<%= publication.user.username %> a créé un évènement de <%= publication.sport.name %>
          </div>
          <div class="d-flex fst-italic">
            <small>Il y a <%= time_ago_in_words(publication.created_at) %></small>
          </div>
            <%# <%= I18n.l(publication.created_at,format: "%d %B %Y %R") %>
        </div>
    </div>
    <div class="card-feed mb-3" data-event-id="4">
        <%= cl_image_tag publication.sport.photo.key, crop: :thumb %>
      <div class="card_content">
        <div class="title">
          "nom de l'event"
        </div>
        <div class="details">
          <div class="d-flex flex-row gap-1">
            <i class="fa-solid fa-people-group" style="color:#35A29F"></i>
            <p class="mb-1">
              Déjà 3 joueurs/6
            </p>
          </div>
          <div class="d-flex flex-row gap-1">
            <i class="fa-solid fa-calendar" style="color:#35A29F"></i>
            <p class="mb-1">
              4 décembre 2024 - 16h à 20h
            </p>
          </div>
        </div>
      </div>
      <%= link_to publications_path, target:"_top" do %>
        <%# <div class="plus-btn">
          <i class="fa-solid fa-chevron-right"></i>
        </div> %>
      <% end %>
    </div>

  </div>
