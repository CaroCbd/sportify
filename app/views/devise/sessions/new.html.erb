<div class="container">


  <h3 class="mt-4 text-center"> Se connecter</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs col-10 justify-content-start">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: "btn btn-primary text-white" %>
    </div>
  <% end %>

  <div class="gap-3 my-3">
    <%= render "devise/shared/links" %>
  </div>

  <%# <%= cl_image_path("https://res.cloudinary.com/#{ENV["CLOUDINARY_CLOUD_NAME"]}/image/upload/sportify_with_tons_of_sports_720_uouiwv.jpg", width: 400, height: 300, crop: :fit) %>


</div>
