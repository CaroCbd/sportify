<div class="container">
  <div class="row text-center">
    <%= cl_image_tag @event.playground.sport.photo.key, height: 300, width: 300, crop: :thumb %>
    <%# <img src="https://res.cloudinary.com/dcipyz0mn/image/upload/v1732709394/th_lzz6hw.jpg" alt="" class="img-fluid mx-auto shadow my-3" style=" width:300px; height:300px"> %>

      <h1><%= @event.name %></h1>
      <div class="col-12">
        <% @event.players.each do |player| %>
          <div class="rounded-5"><%= cl_image_tag player.photo.key, height: 50, width: 50, crop: :thumb %></div>
        <% end %>
      <h5><%= @event.start_at %> - <%= @event.end_at %></h5>
      <p><%= @event.playground.location.address %></p>
      <h4>Organisateur: <%= @event.organisator.username %></h4>
      <%= @event.description %>

    </div>
      <div class="btn btn-secondary col-3 mx-auto my-3">
        S'incrire à l'évènement
        </div>
  </div>
</div>
