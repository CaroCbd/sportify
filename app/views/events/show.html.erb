<div class="row text-center">
  <%= cl_image_tag @event.playground.sport.photo.key, height: 300, width: 300, crop: :thumb %>

    <h1 class="mt-3"><%= @event.name %></h1>
    <div class="col-12">
      <% @event.players.each do |player| %>
        <div><%= cl_image_tag player.photo.key, crop: :thumb, class:"avatar"%></div>
      <% end %>
    <p class="my-3">Le <%= I18n.l(@event.start_at, format: "%d %B %Y") %> de <%= I18n.l(@event.start_at, format: "%R") %> à <%= I18n.l(@event.start_at, format: "%R") %></p>
    <p><%= @event.playground.location.address %></p>
    <h4>Organisateur: <%= @event.organisator.username %></h4>
    <%= @event.description %>
  </div>
    <div class="btn btn-secondary col-3 mx-auto my-3">
      S'incrire à l'évènement
      </div>
  </div>
