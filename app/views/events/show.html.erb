<div class="row text-center">
  <%= cl_image_tag @event.playground.sport.photo.key, height: 300, width: 300, crop: :thumb %>

  <%# <img src="https://res.cloudinary.com/dcipyz0mn/image/upload/v1732709394/th_lzz6hw.jpg" alt="" class="img-fluid mx-auto shadow my-3" style=" width:300px; height:300px"> %>

    <div class="col-12">

      <div class="d-flex justify-content-center">

        <div class="pill-participants d-flex flex-row justify-content-center align-items-center mt-2 mb-4">
          <% @event.players.each do |player| %>
            <div class="pill-avatar mx-2"><%= cl_image_tag player.photo.key, crop: :thumb, class:"avatar"%></div>
          <% end %>
        </div>
      </div>


