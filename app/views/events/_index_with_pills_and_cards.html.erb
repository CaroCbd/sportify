  <div id="index">
    <div class="pills">
      <% Sport.all.map(&:name).each do |sport_name| %>
        <%= render "pill", sport_name: sport_name %>
      <% end %>
    </div>

    <% if search_message %>
        <p>
          <%= search_message %>
        </p>
        <h2>
          Tous nos évènements
        </h2>
        <div class="horizontal-scroll-wrapper card-grid">
          <% events.each do |event| %>
            <%= render "event_card", event:event  %>
          <% end %>
        </div>
      <% else %>
        <h2>
          Spécialement pour vous
        </h2>
          <div class="horizontal-scroll-wrapper card-grid">
            <% events.each do |event| %>
              <%= render "event_card", event:event  %>
            <% end %>
          </div>
      <% end %>
  </div>
