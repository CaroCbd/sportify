<%= simple_form_for [@event] do |f| %>
  <div class="d-flex flex-column justify-content-center ">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="col-10">

      <%= f.input :name,
      label: 'Le nom de votre événement:',
      error: 'Merci de nommer votre event',
      required: true
      %>
    </div>

      <%= f.input :description,
      label: "Description de votre événement",
      error: 'Décrivez votre événement:'
      %>

      <%= f.input :playground_id,
        label: "Choisissez un sport parmis la liste:",
        error: 'Choisissez parmis les sports & lieux de la liste',
        collection: @playgrounds.map { |playground| [playground.name, playground.id] }
      %>

      <label for="event_event_date" class="my-3 mx-3">
        Date de l'évènement
      </label>
      <div class="border rounded-4 fake-input-date">
        <input type="date" id="event_event_date" name="event[event_date]" class="datepicker-input">
        <span>Choisir la date</span>
      </div>

      <div data-controller="datepicker" class="time-pickers">
        <%= f.input :start_time,
            as: :string,
            input_html: {
              data: {
                controller: "datepicker",
                action: "click->datepicker#open_as_time_picker"
              },
              class: "border rounded-4 p-2"
            },
            label:"Début",
            label_html:{
              class: "my-3 mx-3",
            }
        %>
        <%= f.input :end_time,
            as: :string,
            input_html: {
              data: {
                controller: "datepicker",
                action: "click->datepicker#open_as_time_picker"
              },
              class: "border rounded-4 p-2"
            },
            label:"Fin",
            label_html:{
              class: "my-3 mx-3",
            }
        %>
      </div>

        <%= f.button :submit, "C'est parti!", class: "btn btn-secondary col-3 mx-auto my-3 text-center text-justify" %>
      </div>


  </div>
<% end %>
