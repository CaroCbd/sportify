<div class="card-big">
  <div class="position-relative">
    <%= cl_image_tag event.sport.photo.key, height: 300, width: 300 %>
  <% participants_left = (event.sport.number_of_players_max - event.participations.count).to_i %>
  <% if participants_left == 1 %>
    <div class="pill-participant-on-card position-absolute">
      <%= participants_left %> joueur manquant
    </div>
  <% elsif participants_left > 0 %>
    <div class="pill-participant-on-card position-absolute">
      <%= participants_left %> joueurs manquants
    </div>
  <% else %>
    <div class="pill-participant-on-card position-absolute">
      <i class="fa-solid fa-people-group" style="color:white"></i>
      <span>Evènement complet</span>
    </div>
  <% end %>
  </div>
  <div class="card-content position-relative">
    <div class="title mb-1">
      <b><%= event.name %> </b>
    </div>
    <div class="details my-3">
      <div class="d-flex flex-row gap-1">
        <i class="fa-solid fa-calendar" style="color:#35A29F"></i>
        <p class="mb-1">Le <%= I18n.l(event.start_at, format: "%d %B %Y") %> de <%= I18n.l(event.start_at, format: "%R") %> à <%= I18n.l(event.end_at, format: "%R") %></p>
      </div>
      <div class="d-flex flex-row gap-1">
        <i class="fa-solid fa-location-dot" style="color:#35A29F"></i>
        <p class="mb-1"><%= event.location.address %></p>
      </div>
    </div>
    <%= link_to "Voir l'évènement", event_path(event), class:"btn btn-secondary col-1 mx-auto mt-2 mb-1", target:"_top"%>
  </div>
</div>
